<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="240.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mercadolibre.integradora2.controller.AddStockController">
    <VBox alignment="CENTER" prefHeight="240.0" prefWidth="360.0" spacing="10">
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="productField" prefWidth="270" promptText="Product name" />
            <Button fx:id="searchBtn" onAction="#searchProduct" text="Search" />
        </HBox>
        <TextArea fx:id="productInfo" prefHeight="150" maxWidth="331.0" promptText="The product information will appear here" editable="false" />
        <HBox alignment="CENTER" spacing="10">
            <Spinner fx:id="stockNumber" prefWidth="70" editable="true"/>
            <Button fx:id="addStockBtn" text="Add Stock" onAction="#addStock"/>
            <Button fx:id="cancelBtn" text="Cancel" onAction="#cancel"/>
        </HBox>
    </VBox>
</AnchorPane>
