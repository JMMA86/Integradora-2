<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="640.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mercadolibre.integradora2.model.AddProductController">
<VBox spacing="10">
    <HBox alignment="CENTER" spacing="10">
        <VBox>
            <Label text="Name:" />
            <TextField fx:id="nameField" />
        </VBox>
        <VBox>
            <Label text="Price:" />
            <TextField fx:id="priceField" />
        </VBox>
        <VBox>
            <Label text="Amount:" />
            <TextField fx:id="amountField" />
        </VBox>
    </HBox>
    <VBox spacing="10">
        <Label text="Description:"/>
        <TextArea fx:id="descriptionArea" maxWidth="500"/>
    </VBox>

</VBox>
</AnchorPane>
